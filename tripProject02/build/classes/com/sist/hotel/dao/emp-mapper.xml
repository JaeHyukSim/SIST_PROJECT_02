<mapper namespace="com.sist.hotel.dao.emp-mapper">
	
    <select id="hotelAllData" resultType="HotelVO" parameterType="java.util.Map">
    	SELECT id, title, product_kind, num
      FROM (SELECT id, title, product_kind, rownum as num 
      FROM (SELECT id, title, product_kind 
      FROM products ORDER BY id DESC))
      WHERE num BETWEEN #{start} AND #{end}
    </select>
    
    <select id="hotelAllDataByEvel" resultType="HotelVO" parameterType="java.util.Map">
    	SELECT id, title, product_kind, Evel_point, thumbnail,num
      FROM (SELECT id, title, product_kind,Evel_point, thumbnail, rownum as num 
      FROM (SELECT id, title, product_kind, Evel_point ,thumbnail
      FROM products ORDER BY Evel_point DESC))
      WHERE num BETWEEN #{start} AND #{end}
    </select>
</mapper>



















